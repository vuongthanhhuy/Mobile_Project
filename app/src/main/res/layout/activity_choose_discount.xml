<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.Content_Booking_Fragment.ChooseDiscount">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarChooseDiscount"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:alpha="0.8"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:title="@string/chooseDiscount"
        app:titleTextAppearance="@style/TitleTextCustom"
        app:titleCentered="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_discount_available"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"/>

</LinearLayout>