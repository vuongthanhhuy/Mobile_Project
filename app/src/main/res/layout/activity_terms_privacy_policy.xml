<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.Content_Account_Fragment.Content_Terms_Privacy.Terms_PrivacyPolicy">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:alpha="0.8"
        android:background="@color/white"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:title="@string/termAndPrivacyPolicy"
        app:titleTextAppearance="@style/Toolbar.TitleText" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/serviceAgreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/serviceAgreement" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/privacyPolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/privacyPolicy" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/paymentPolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paymentPolicy" />
    </com.google.android.material.tabs.TabLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></androidx.viewpager.widget.ViewPager>

</LinearLayout>