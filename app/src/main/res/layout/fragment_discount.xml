<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.Content_Discount_Fragment.DiscountFragment"
    android:layout_marginBottom="70dp"
    >


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutDiscount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/discountAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discountAvailable" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/discountHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discountHistory" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpagerDiscount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></androidx.viewpager.widget.ViewPager>

</LinearLayout>