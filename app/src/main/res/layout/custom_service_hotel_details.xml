<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:columnCount="4"
    android:rowCount="2"
    android:orientation="horizontal">

        <TextView
            android:id="@+id/wifi"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/baseline_wifi_24"
            android:gravity="center"
            android:text="Wi-Fi miễn phí" />

        <TextView
            android:id="@+id/TV"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/baseline_connected_tv_24"
            android:gravity="center"
            android:text="Smart TV" />

        <TextView
            android:id="@+id/receptionist"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/baseline_support_agent_24"
            android:gravity="center"
            android:text="Lễ tân 24/24" />

        <TextView
            android:id="@+id/bathtub"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/baseline_bathtub_24"
            android:gravity="center"
            android:text="Bồn tắm" />

        <TextView
            android:id="@+id/bathroom"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/baseline_bathroom_24"
            android:gravity="center"
            android:text="Bồn tắm đứng" />

        <TextView
            android:id="@+id/kingbed"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/baseline_bedroom_parent_24"
            android:gravity="center"
            android:text="Giường King" />

</GridLayout>